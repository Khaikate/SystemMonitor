<Window x:Class="SystemMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="System Monitor"
        SizeToContent="WidthAndHeight"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        Opacity="0.95"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Border Background="#CC1E1E1E" CornerRadius="12" Padding="10" Effect="{DynamicResource DropShadow}">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">

            <!-- Nút đóng -->
            <Button Content="✖" Width="30" Height="30"
                    HorizontalAlignment="Right"
                    Click="CloseButton_Click"
                    Background="Transparent"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0"
                    ToolTip="Đóng ứng dụng" />

            <!-- Thẻ thông tin -->
            <Grid Margin="10">
                <StackPanel>
                    <!-- CPU -->
                    <TextBlock Text="{Binding CpuLoad, StringFormat=CPU: {0:F1}%}" Foreground="Lime"/>
                    <TextBlock Text="{Binding CpuTemp, StringFormat=Temp: {0:F1}°C}" Foreground="Orange"/>
                    <TextBlock Text="{Binding CpuClockGHz, StringFormat=Clock: {0:F2} GHz}" Foreground="Cyan"/>

                    <!-- RAM -->
                    <TextBlock Text="{Binding RamLoad, StringFormat=RAM: {0:F1}%}" Foreground="Yellow"/>
                    <TextBlock Text="{Binding RamUsedGB, StringFormat=Used: {0:F1} GB}" Foreground="Cyan"/>
                    <TextBlock Text="{Binding RamTotalGB, StringFormat=Total: {0:F1} GB}" Foreground="Gray"/>

                    <!-- GPU -->
                    <TextBlock Text="{Binding GpuName}" Foreground="LightBlue"/>
                    <TextBlock Text="{Binding GpuLoad, StringFormat=GPU Load: {0:F1}%}" Foreground="LightGreen"/>
                    <TextBlock Text="{Binding GpuTemp, StringFormat=GPU Temp: {0:F1}°C}" Foreground="OrangeRed"/>

                    <!-- Disk -->
                    <TextBlock Text="{Binding DiskReadMBs, StringFormat=Disk Read: {0:F1} MB/s}" Foreground="White"/>
                    <TextBlock Text="{Binding DiskWriteMBs, StringFormat=Disk Write: {0:F1} MB/s}" Foreground="White"/>

                    <!-- Network -->
                    <TextBlock Text="{Binding NetRecvKBs, StringFormat=Net ↓ {0:F1} KB/s}" Foreground="LightPink"/>
                    <TextBlock Text="{Binding NetSentKBs, StringFormat=Net ↑ {0:F1} KB/s}" Foreground="LightPink"/>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Border>
</Window>