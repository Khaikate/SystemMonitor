<Window x:Class="SystemMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="System Monitor"
        SizeToContent="WidthAndHeight"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        FontFamily="Segoe UI">

    <Window.Resources>
        <!-- Style cho các TextBlock tiêu đề -->
        <Style TargetType="TextBlock" x:Key="HeaderStyle">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <!-- Style cho ProgressBar -->
        <Style TargetType="ProgressBar">
            <Setter Property="Height" Value="8"/>
            <Setter Property="Margin" Value="0,2,0,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="#303030"/>
        </Style>
    </Window.Resources>

    <Border Background="#D8000000" CornerRadius="8" BorderThickness="1" BorderBrush="#808080" Padding="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Hàng cho thanh tiêu đề -->
                <RowDefinition Height="*"/>    <!-- Hàng cho nội dung -->
            </Grid.RowDefinitions>

            <!-- Thanh tiêu đề -->
            <Grid Grid.Row="0" Margin="0,0,0,10" Background="#01000000" MouseLeftButtonDown="Window_MouseLeftButtonDown">
                <TextBlock Text="SYSTEM MONITOR" Foreground="White" FontWeight="Bold" VerticalAlignment="Center"/>
                <Button Content="✖" 
                        Width="25" Height="25"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Click="CloseButton_Click"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        ToolTip="Close"/>
            </Grid>

            <!-- Nội dung chính -->
            <StackPanel Grid.Row="1" Margin="5">

                <!-- CPU Section -->
                <TextBlock Text="{Binding CpuName}" Style="{StaticResource HeaderStyle}"/>
                <ProgressBar Value="{Binding CpuLoad}" Foreground="Cyan"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="{Binding CpuLoad, StringFormat={}{0:F1}%}" Foreground="Cyan"/>
                    <TextBlock Grid.Column="1" Text="{Binding CpuClockGHz, StringFormat={}{0:F2} GHz}" Foreground="Cyan" HorizontalAlignment="Center" Margin="10,0,10,0"/>
                    <TextBlock Grid.Column="2" Text="{Binding CpuTemp, StringFormat={}{0:F1}°C}" Foreground="Cyan" HorizontalAlignment="Right"/>
                </Grid>

                <!-- RAM Section -->
                <TextBlock Text="RAM" Margin="0,10,0,0" Style="{StaticResource HeaderStyle}"/>
                <ProgressBar Value="{Binding RamLoad}" Foreground="Orange"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="{Binding RamLoad, StringFormat={}{0:F1}%}" Foreground="Orange"/>
                    <TextBlock Grid.Column="1" HorizontalAlignment="Right">
                        <Run Text="{Binding RamUsedGB, StringFormat={}{0:F1} GB}" Foreground="Orange"/>
                        <Run Text="{Binding RamTotalGB, StringFormat={} / {0:F1} GB}" Foreground="#A0A0A0"/>
                    </TextBlock>
                </Grid>

                <!-- GPU Section -->
                <TextBlock Text="{Binding GpuName}" Margin="0,10,0,0" Style="{StaticResource HeaderStyle}"/>
                <ProgressBar Value="{Binding GpuLoad}" Foreground="LightGreen"/>
                 <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="{Binding GpuLoad, StringFormat={}{0:F1}%}" Foreground="LightGreen"/>
                    <TextBlock Grid.Column="1" Text="{Binding Fps, StringFormat={}{} FPS}" Foreground="LightGreen" HorizontalAlignment="Center" Margin="10,0,10,0"/>
                    <TextBlock Grid.Column="2" Text="{Binding GpuTemp, StringFormat={}{0:F1}°C}" Foreground="LightGreen" HorizontalAlignment="Right"/>
                </Grid>

            </StackPanel>
        </Grid>
    </Border>
</Window>
